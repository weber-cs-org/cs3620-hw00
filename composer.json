            "name": "Don Stringham",
            "email": "donstringham@weber.edu"
        }
    ],
    "autoload": {
        "psr-4":{
            "App\\": "src/",
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "8.0.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "fakerphp/faker": "^1.14"
    },
    "scripts": {
        "clean": [
            "rm -f composer.lock",
            "rm -f junit.xml",
            "rm -fr vendor/"
        ],
        "fix": "vendor/bin/phpcbf --standard=PSR2 src tests",
        "push": [
            "git add .",
            "git commit -m 'Updated assignment'",
            "git push origin"
        ],
        "sniff": "vendor/bin/phpcs src tests",
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
